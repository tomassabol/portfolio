---
export type Props = {
    title: string;
};

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content="Tomáš Sabol's portfolio" />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>
