---
export type Props = { href: string };

const { href } = Astro.props;
---

<a
    href={href}
    target="_blank"
    class="w-[18rem] font-medium border border-purple-400 rounded-md bg-violet-50/30 dark:bg-purple-400/50 text-purple-800 dark:text-purple-100 py-2 lg:hover:bg-purple-50"
>
    <slot />
</a>
